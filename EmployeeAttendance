echo "welcome to Employee Wage Computation"
echo "emp wage"
file=$1
salary=`sed "s/;/ /" $file | sed "s/;/ /" | awk '{print $3}' | tail -n+2`
sum=0
n=0

for line in $salary
do
    ((sum+=line))
    ((n++))
done

avg=$((sum / n))
count=0

for line in $salary
do
    if [ $line -lt $avg ]
    then
         ((count++))
    fi
done

echo "No. of Emp : $count"
